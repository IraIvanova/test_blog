{% extends '@Blog/base.html.twig' %}
{% block body %}

    <div class="container">
        <div class="row">

    {% for blog in blogs %}
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-preview">
                    <a href="{{ path('blog.single', { 'id': blog.id }) }}">
                        <h2 class="post-title">
                            {{ blog.title }}
                        </h2>
                    </a>
                        <h3 class="post-subtitle">
                            {{ blog.description|slice (0,100) }}
                        </h3>


                </div>
                <hr>
            </div>
    {% endfor %}
            <div class="col-md-6">
                {{ knp_pagination_render(blogs) }}
            </div>

        </div>

    </div>




{% endblock %}